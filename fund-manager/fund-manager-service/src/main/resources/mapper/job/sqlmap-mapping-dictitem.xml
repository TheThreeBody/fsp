<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhengtong.fsp.manager.mapper.job.dict.DictItemMapper">

    <sql id="dictAttributes">
         dict_item_id,
         dict_item_code,
         dict_item_name,
         dict_id,
         create_time,
         update_time
    </sql>

    <resultMap id="baseResultMap" type="com.zhengtong.fsp.manager.pojo.job.dict.DictItemEntity">
        <id column="dict_item_id" property="dictItemId"/>
        <result column="dict_item_code" property="dictItemCode"/>
        <result column="dict_item_name" property="dictItemName"/>
        <result column="dict_id" property="dictId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>


    <select id="selectByPrimaryKey" resultMap="baseResultMap" parameterType="java.lang.Integer">
        SELECT
        <include refid="dictAttributes"/>
        FROM t_dict_item
        WHERE
        dict_item_id = #{dictItemId}
    </select>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        DELETE FROM t_dict_item
        WHERE
        dict_item_id = #{dictItemId}
    </delete>
    <insert id="insert" parameterType="com.zhengtong.fsp.manager.pojo.job.dict.DictItemEntity">
        INSERT INTO t_dict_item (
        dict_item_id,
        dict_item_code,
        dict_item_name,
        dict_id,
        create_time,
        update_time
        )
        VALUES (
        #{dictItemId},
        #{dictItemCode},
        #{dictItemName},
        #{dictId},
        #{createTime},
        #{updateTime}
        )
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.zhengtong.fsp.manager.pojo.job.dict.DictItemEntity">
        UPDATE t_dict_item
        <set>
            <if test="dictItemCode != null">
                dict_item_code = #{dictItemCode},
            </if>
            <if test="dictItemName != null">
                dict_item_name = #{dictItemName},
            </if>
            <if test="dictId != null">
                dict_id = #{dictId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        WHERE
        dict_item_id = #{dictItemId}
    </update>
    <select id="selectDict" resultMap="baseResultMap" parameterType="java.util.Map">
        SELECT
        tdi.dict_item_code,
        tdi.dict_item_name
        FROM t_dict td,t_dict_item tdi
        WHERE
        <if test="dictName != null and dictName != '' ">
            td.dict_name = #{dictName}
        </if>
        <if test="dictItemCode != null and dictItemCode != '' ">
            AND  tdi.dict_item_code = #{dictItemCode}
        </if>
        AND
        td.dict_id = tdi.dict_id
    </select>
</mapper>